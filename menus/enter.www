<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">

<html>
  <head>
    <title>$b - $n - Enter</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <link rel="stylesheet" href="bbbs.css" type="text/css">
  </head>
  <body>
    <table frame="border" cellpadding="5" width="640" border="1" cellspacing="0" class="header">
      <tr><td class="logo">$u
    </table>

    <p>
      [<a href="bbbs?id=$i;do=l">Logout</a>]
      [<a href="bbbs?id=$i;do=s">Settings</a>]
      [<a href="bbbs?id=$i;do=o">Who's Online</a>]
      [<a href="bbbs?id=$i;do=l%2f,21">File Areas</a>]
      [<a href="bbbs?id=$i;do=">Message Areas</a>]
      [<a href="bbbs?id=$i;do=r$c">This Area</a>]
      [<a href="bbbs?id=$i;do=r$c">Don't Save</a>]
    </p>

    <form action="bbbs?id=$i;do=s$c.$m" method="post">
      <table border="1" cellspacing="0" cellpadding="5">
        <tr class="header">
          <td><strong>Enter a Message</strong></td>
        </tr>
        <tr>
          <td>
            <table class="data" cellspacing="1" border="0" cellpadding="5">
              <tr>
                <td align="right"><strong>Area:</strong></td>
                <td><select name="area">$a</select></td>
              </tr>
              <tr>
                <td align="right"><strong>To:</strong></td>
                <td><input size="71" name="to" value="$t"></td>
              </tr>
              <tr>
                <td align="right"><strong>Subject:</strong></td>
                <td><input size="71" name="subject" value="$s"></td>
              </tr>
              <tr>
                <td align="right" valign="top"><strong>Text:</strong></td>
                <td><textarea cols="79" rows="25" name="msgtext">$d</textarea></td>
              </tr>
              <tr>
                <td>&nbsp;</td>
                <td><input type=submit value="Save Message"></td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </form>
  </body>
</html>
